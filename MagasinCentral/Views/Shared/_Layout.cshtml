<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MagasinCentral</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MagasinCentral.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MagasinCentral</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                               asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item"></li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Rapport" asp-action="Index">
                            Rapport
                            consolidé
                        </a>
                        </li>
                        <li class="nav-item"></li>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Performances"
                           asp-action="Index">Performances</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="ventesDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Ventes
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="ventesDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Vente" asp-action="Liste">
                                        Liste des
                                        ventes
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Vente" asp-action="Enregistrer">
                                        Faire une
                                        vente
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="produitsDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Produits
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="produitsDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Produit" asp-action="Index">
                                        voir
                                        Produits
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Produit" asp-action="Recherche">
                                        Chercher
                                        une produit..
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="stockDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Stock
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="stockDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Stock" asp-action="StockCentral">Stock central</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Stock" asp-action="DemandesEnAttente">Demandes en attente</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Client" asp-action="Index">Clients</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Panier" asp-action="Index" asp-route-clientId="1">Panier client #1</a>
                        </li>

                        <li class="nav-item">
                            <form asp-controller="Commande" asp-action="ValiderCommande" method="post" class="d-inline">
                                <input type="hidden" name="clientId" value="1" />
                                <button type="submit" class="btn nav-link text-dark border-0 bg-transparent">Valider commande</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MagasinCentral - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
